<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.macarel.android.cantalausa"
    android:versionCode="3"
    android:versionName="3" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="13" />

    <application
        android:allowBackup="true"
        android:debuggable="false"
        android:icon="@drawable/ic_dictionary"
        android:label="@string/app_name" >

        <!-- The default activity of the app; displays search results. -->

        <activity
            android:name="net.macarel.android.cantalausa.SearchableDictionary"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Receives the search request. -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <!-- No category needed, because the Intent will specify this class component -->
            </intent-filter>

            <!-- Points to searchable meta data. -->
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!-- Displays the definition of a word. -->
        <activity android:name="net.macarel.android.cantalausa.WordActivity" />
        <activity
            android:name="net.macarel.android.cantalausa.SplashActivity"
            android:label="@string/app_name" >

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name="net.macarel.android.cantalausa.EditPreferences"
            android:label="@string/app_name" >
        </activity>

        <!-- Provides search suggestions for words and their definitions. -->
        <provider
            android:name="net.macarel.android.cantalausa.DictionaryProvider"
            android:authorities="net.macarel.android.cantalausa.DictionaryProvider" />

        <!-- Points to searchable activity so the whole app can invoke search. -->
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".SearchableDictionary" />
    </application>

</manifest>